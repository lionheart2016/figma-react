{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./node_modules/.tsbuildinfo"
  },
  "include": ["vite.config.js"],
  "exclude": ["node_modules", "src"]
}